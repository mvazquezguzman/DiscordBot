const mongoose = require("mongoose");

const blacklistSchema = new mongoose.Schema({
  blackListedUsers: [
      {
        userId: {
          type: String,
          required: true
        },
        userName: {
          type: String,
          required: true
        }
      }
    ]
  blackListedRoles: [ //  Add Role
      {
        roleId: {
          type: String,
          required: true
        },
        roleName: {
          type: String,
          required: true
        }
      }
    ]
  });

const blackListDB = mongoose.model("BlacklistUser", blacklistSchema);

module.exports = {
  blackListDB
}
